<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout continueOnError="false" enabled="true" name="Call-reCAPTCHA">
    <DisplayName>Call reCAPTCHA</DisplayName>
    <Properties/>
    <Request clearPayload="true">
        <Set>
            <Headers>
                <Header name="Accept">application/json</Header>
            </Headers>
            <Verb>POST</Verb>
            <Payload contentType="application/json" variablePrefix="@" variableSuffix="#">
{
  "event": {
    "token": "@recaptchatoken#",
    "siteKey": "@propertyset.recaptcha.siteKey#"
  }
}
            </Payload>
        </Set>
    </Request>
    <Response>calloutResponse</Response>
    <HTTPTargetConnection>
        <Properties/>
        <Authentication>
            <GoogleAccessToken>
                <Scopes>
                    <Scope>https://www.googleapis.com/auth/cloud-platform</Scope>
                </Scopes>
            </GoogleAccessToken>
        </Authentication>
        <URL>https://recaptchaenterprise.googleapis.com/v1/projects/{organization.name}/assessments</URL>
    </HTTPTargetConnection>
</ServiceCallout>